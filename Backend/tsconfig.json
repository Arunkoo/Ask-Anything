{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src"]
}
